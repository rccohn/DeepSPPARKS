# !/bin/bash

# either run ./container build, delete, or run
CNAME="rccohn/agg-utils-docker-base:latest"

for arg in "$@"
do
	case $arg in
		-b | --build | build)
		echo "building container"
		sudo docker build -t ${CNAME} .
		shift
		;;
		esac
	case $arg in
		-d| --delete | delete)
		echo "deleting container"
		sudo docker rmi --force ${CNAME} 
		shift
		;;
		esac
	case $arg in
		-r | --run | run)
		echo "running container"
		sudo docker run --rm -it --name agg-nvdc  ${CNAME}
		shift
		;;
		esac
done
